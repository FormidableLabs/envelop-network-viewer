{
  "name": "envelop-network-viewer",
  "version": "0.0.0",
  "description": "A GraphQL Envelop plugin for providing visibility into your GraphQL operation network activity.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:FormidableLabs/envelop-network-viewer.git",
  "author": "Jeremy Giberson <jeremy.giberson@formidable.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@envelop/testing": "^4.4.1",
    "@graphql-tools/schema": "^8.5.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.5",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@tsconfig/node12": "^1.0.11",
    "@types/jest": "^28.1.6",
    "@types/stubby": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "install-peers-cli": "^2.2.0",
    "jest": "^28.1.3",
    "jest-expect-json": "^0.1.1",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.3",
    "stubby": "^5.1.0",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "@envelop/core": "^2.4.1",
    "graphql": "^16.5.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts ./src --fix",
    "prebuild": "yarn clean",
    "prepare": "install-peers",
    "semantic-release": "semantic-release",
    "test": "jest"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "rc",
        "prerelease": true
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
